/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(170, 94, 94);
}

.usermotto {
  margin-top: 200px;
}
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.nav_main{
  width: 100%;
  border-bottom: 2rpx solid rgba(228, 221, 221, 0.664);
  padding-bottom: 2rpx;
}
.navbar{
  flex: none;
  display: flex;
  width: 70%;
  margin:0 auto;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
   font-size: 30rpx;
   color:rgb(136, 127, 127);
   font-weight: 600;
}
.navbar .item.active{
  font-size: 40rpx;
  color: rgb(224, 59, 59);
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: rgb(212, 61, 61);
}

.movie_main{
  padding: 25rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid rgba(228, 221, 221, 0.664);
  line-height: 1.5;

}
.movie_img{
  width: 150rpx;
  height: 210rpx;
}
.mid_info{
  flex-grow: 2;
  padding-left: 20rpx;
  text-align: left;
}
.movie_name{
  width: 400rpx;
  font-size: 32rpx;
  font-weight: 600;

}
.movie_name,.movie_actor,.movie_name_up{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.movie_type,.movie_actor,.show_how{
  font-size: 28rpx;
}
.movie_actor{
  width: 390rpx;
}
.movie_type,.movie_actor{
  color: rgb(97, 82, 82);
}
.show_how{
  color: rgb(170, 165, 165);
}
.buy{
    padding: 10rpx 20rpx;
    background-color: rgb(202, 79, 79);
    border-radius: 5rpx;
    font-size: 26rpx;
    color: #fff;
 
}
.comming{
    padding: 10rpx 20rpx;
    background-color: rgb(188, 70, 243);
    border-radius: 5rpx;
    font-size: 26rpx;
    color: #fff;
}
.score{
 color: rgb(230, 230, 30);
 font-size: 34rpx;
}
.score_text{
  font-size: 20rpx;
  color: rgb(230, 230, 30);
  vertical-align: 2rpx;
}
.outside{
  text-align: right;
  margin-top: 40rpx;
}
.right_show{
  text-align: right;
}

.movie_img_up{
  width: 170rpx;
  height: 230rpx;
}
.movie_name_up{
  color: rgb(29, 27, 27);
  font-size: 30rpx;
}
.movie_want_up{
   color: rgb(116, 107, 107);
  font-size: 24rpx;
}
.top_movie{
  width: 180rpx;
  text-align: center;
  margin-right: 15rpx;
  
}
.recentTitle{
  padding-left: 20rpx;
  margin: 20rpx 0 10rpx 0;
  font-size: 32rpx;
  color: rgb(70, 54, 54);
}
.top_main{
  margin-bottom: 30rpx;
 

}
.top_all_movie{
  padding: 20rpx;
  display: flex;
   flex-flow: row nowrap;
   overflow: auto;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.split_line{
  width: 100%;
  height: 15rpx;
  background-color: rgb(245, 247, 248);
  margin: 10rpx 0;
}
.search_main{
  position: absolute;
  top:0;
  right: 20rpx;
  padding: 12rpx 12rpx 12rpx 20rpx;
  border-left: 2rpx solid rgba(228, 221, 221, 0.664);
}
.search_img{
  width: 50rpx;
  height: 50rpx;
}


